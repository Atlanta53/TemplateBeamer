\newenvironment{Text}[1]{
	\tcolorbox[
	enhanced,
	attach title to upper,
	after title={.},
	colback=gray!12,
	boxrule=0pt,
	frame hidden,
	sharp corners,
	borderline north={1mm}{0mm}{mainColor},
	left=3mm, right=3mm, top=4mm, bottom=4mm,
	coltitle=mainColor,
	adjusted title=\n,
	fonttitle=\bfseries,
	title=#1]}
{\endtcolorbox}

\newenvironment{TextColor}[2]{
	\tcolorbox[
	enhanced,
	attach title to upper,
	after title={.},
	colback=gray!12,
	boxrule=0pt,
	frame hidden,
	sharp corners,
	borderline north={1mm}{0mm}{#2},
	left=3mm, right=3mm, top=4mm, bottom=4mm,
	coltitle=#2,
	adjusted title=\n,
	fonttitle=\bfseries,
	title=#1]}
{\endtcolorbox}


\newtcblisting{CodeListings}[2]{
	enhanced,
	attach title to upper,
	after title={.},
	colback=gray!12,
	boxrule=0pt,
	frame hidden,
	sharp corners,
	borderline north={1mm}{0mm}{mainColor},
	left=3mm, right=3mm, top=4mm, bottom=4mm,
	colupper=black,
	listing only,
	listing options={
		style=tcblatex,
		language=#2, 
		keywordstyle=\color{orange!80}\bfseries,
		commentstyle=\color{gray},
		stringstyle=\color{purple},
		basicstyle=\size\ttfamily,
		breaklines,
		numbers=none,
		showspaces=false,
		showstringspaces=false,
		showtabs=false,
	},
	every listing line={
		%\textcolor{red}{\small\ttfamily\bfseries>}
	},
	coltitle=mainColor,
	adjusted title=\n,
	fonttitle=\bfseries,
	title=#1,
}


