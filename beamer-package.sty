%%%% Definition of the Title frame %%%%

\setbeamercolor{title}{fg=black}
\setbeamercolor{subtitle}{fg=black}
\setbeamercolor{date}{fg=black}
\setbeamercolor{author}{fg=black}

\setbeamerfont{title}{size=\LARGE}
\setbeamerfont{subtitle}{size=\large}
\setbeamerfont{date}{size=\normalsize}
\setbeamerfont{author}{size=\normalsize}

\setbeamertemplate{title page}{%
	\begin{tikzpicture}[overlay, remember picture]
		\fill [color=mainColor!50] (current page.north west) -- ($(current page.north west)+(1, 0)$)  -- ($(current page.north west)+(2.6, -2.7)$) -- (current page.south west);
		\fill [color=mainColor] (current page.north east) -- ($(current page.north west)+(1.2, 0)$)  --($(current page.north west)+(2.7, -2.6)$) -- ($(current page.north east)+(0, -2.6)$);
		\fill [color=white, fill opacity=0.7] ($(current page.north west)+(0, -2.7)$) -- ($(current page.north east)+(0, -2.7)$)  -- ($(current page.north east)+(0, -6)$) -- ($(current page.north west)+(0, -6)$);
		\fill [color=orange] ($(current page.north west)+(2.7, -2.7)$) -- ($(current page.north east)+(-13.2, -2.7)$)  -- ($(current page.north east)+(-14.35, -6)$) -- ($(current page.north west)+(1.55, -6)$);
	\end{tikzpicture}
	
	\vspace{2.8cm}
	
	\begin{beamercolorbox}[wd=\paperwidth]{title}
		\usebeamerfont{title}%
		\hspace{3.3cm}\strut\inserttitle\strut\par%	
	\end{beamercolorbox}
	
	\vspace{0.4cm}
	
	\begin{beamercolorbox}[wd=\paperwidth]{subtitle}
		\usebeamerfont{subtitle}%
		\hspace{3cm}\strut\insertsubtitle\strut\par%
	\end{beamercolorbox}
	
	\vspace{0.1cm}
	
	\begin{beamercolorbox}[wd=\paperwidth]{date}
		\usebeamerfont{date}%
		\hspace{3cm}\textcolor{orange}{\textbf{Date}\;\;}\strut\insertdate\strut\par%
	\end{beamercolorbox}
	
	\vspace{1.5cm}
	\hspace{1cm}\textcolor{orange}{\textbf{Author(s)}\quad} 
	\vspace{0.2cm}
	
	\begin{beamercolorbox}[wd=\paperwidth]{author}
		\usebeamerfont{author}%
		\hspace{2cm}\strut\insertauthor\strut\par%
	\end{beamercolorbox}
}

%%%% Definition of the Text frame %%%%

\setbeamercolor{frametitle}{fg=white}
\setbeamercolor{framesubtitle}{fg=white}
\setbeamerfont{frametitle}{size=\LARGE}
\setbeamerfont{framesubtitle}{size=\scriptsize}


\setbeamertemplate{frametitle}{
	\begin{tikzpicture}[overlay, remember picture]
		\fill [color=orange] (current page.north west) -- ($(current page.north west)+(1, 0)$)  -- ($(current page.north west)+(2, -1.5)$) -- ($(current page.north west)+(0, -1.5)$);
		\fill [color=mainColor] (current page.north east) -- ($(current page.north west)+(1.2, 0)$)  --($(current page.north west)+(2.2, -1.5)$) -- ($(current page.north east)+(0, -1.5)$);
	\end{tikzpicture}

	\vspace{-0.45cm}\hspace{1cm}
	\begin{beamercolorbox}[wd=.7\paperwidth]{frametitle}
		\usebeamerfont{frametitle}%
		\strut\insertframetitle\strut\par%
	\end{beamercolorbox}
	\vspace{-0.25cm}\hspace{1.4cm}
	\begin{beamercolorbox}[wd=.7\paperwidth]{framesubtitle}
		\usebeamerfont{framesubtitle}%
		\strut\insertframesubtitle\strut\par%
	\end{beamercolorbox} 
	\vspace{0.6cm}  
}
